{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": "./src",
    "outDir": "./build",
    "lib": [
      "ES5",
      "ES6",
      "DOM"
    ],
    "target": "ES5",
    "module": "CommonJS",
    "strictNullChecks": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "typeRoots": [
    "src/global.d.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "files": [
    "src/main.ts"
  ]
}