{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": "./src",
    "outDir": "./build",
    "target": "ES2020",
    "module": "ESNext",
    "lib": [
      "ES5",
      "ES6",
      "DOM"
    ],
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "assets": [
        "view/assets"
      ],
      "constants": [
        "view/constants"
      ],
      "utils/*": [
        "view/utils/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types",
      "src/global.d.ts"
    ]
  },
  "exclude": [
    "node_modules",
    "build",
    "refs"
  ]
}